{
    "name": "ev-vscode",
    "displayName": "ev-vscode",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ev.setMark",
                "title": "EV: Set Mark"
            },
            {
                "command": "ev.cancelMark",
                "title": "EV: Cancel Mark"
            },
            {
                "command": "ev.cursorMove",
                "title": "EV: cursorMove"
            },
            {
                "command": "ev.scroll",
                "title": "EV: scroll"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+space",
                "command": "ev.setMark",
                "when": "textInputFocus && !suggestWidgetVisible"
            },
            {
                "key": "ctrl+g",
                "command": "ev.cancelMark",
                "when": "textInputFocus && !suggestWidgetVisible && ev.markIsSet"
            },
            {
                "key": "ctrl+g",
                "command": "ev.cancelMark",
                "when": "editorHasSelection && textInputFocus"
            },
            {
                "key": "ctrl+p",
                "command": "ev.cursorMove",
                "when": "textInputFocus && !suggestWidgetVisible",
                "args": {
                    "to": "up"
                }
            },
            {
                "key": "ctrl+n",
                "command": "ev.cursorMove",
                "when": "textInputFocus && !suggestWidgetVisible",
                "args": {
                    "to": "down"
                }
            },
            {
                "key": "ctrl+b",
                "command": "ev.cursorMove",
                "when": "textInputFocus && !suggestWidgetVisible",
                "args": {
                    "to": "left"
                }
            },
            {
                "key": "ctrl+f",
                "command": "ev.cursorMove",
                "when": "textInputFocus && !suggestWidgetVisible",
                "args": {
                    "to": "right"
                }
            },
            {
                "key": "ctrl+a",
                "command": "ev.cursorMove",
                "when": "textInputFocus && !suggestWidgetVisible && !ev.atBeginningOfLine",
                "args": {
                    "to": "wrappedLineStart"
                }
            },
            {
                "key": "ctrl+a",
                "command": "ev.cursorMove",
                "when": "textInputFocus && !suggestWidgetVisible && ev.atBeginningOfLine",
                "args": {
                    "to": "wrappedLineFirstNonWhitespaceCharacter"
                }
            },
            {
                "key": "ctrl+e",
                "command": "ev.cursorMove",
                "when": "textInputFocus && !suggestWidgetVisible",
                "args": {
                    "to": "wrappedLineEnd"
                }
            },
            {
                "key": "alt+f",
                "command": "ev.cursorMove",
                "when": "textInputFocus && !suggestWidgetVisible",
                "args": {
                    "to": "right",
                    "by": "WordStart"
                }
            },
            {
                "key": "alt+b",
                "command": "ev.cursorMove",
                "when": "textInputFocus && !suggestWidgetVisible",
                "args": {
                    "to": "left",
                    "by": "WordStart"
                }
            },
            {
                "key": "alt+n",
                "command": "ev.cursorMove",
                "when": "textInputFocus && !suggestWidgetVisible",
                "args": {
                    "to": "down",
                    "by": "line",
                    "value": 5
                }
            },
            {
                "key": "alt+p",
                "command": "ev.cursorMove",
                "when": "textInputFocus && !suggestWidgetVisible",
                "args": {
                    "to": "up",
                    "by": "line",
                    "value": 5
                }
            },
            {
                "key": "ctrl+v",
                "command": "ev.scroll",
                "args": {
                    "by": "halfPage",
                    "to": "down",
                    "revealCursor": true,
                    "value": 1
                }
            },
            {
                "key": "alt+v",
                "command": "ev.scroll",
                "args": {
                    "by": "halfPage",
                    "to": "up",
                    "revealCursor": true,
                    "value": 1
                }
            },
            {
                "key": "alt+w",
                "command": "runCommands",
                "args": {
                    "commands": [
                        "editor.action.clipboardCopyAction",
                        "ev.cancelMark"
                    ]
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    }
}